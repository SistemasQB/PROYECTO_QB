    <script>
        lucide.createIcons();
    </script>
</body>
</html>

<style>
    :root {
    --primary-color: #0099dd; /* Adjusted to match logo blue */
    --secondary-color: #50e3c2;
    --accent-color: #f5a623;
    --background-color: #f0f4f8;
    --card-color: #ffffff;
    --text-color: #333333;
}

body {
    font-family: 'Arial', sans-serif;
    background-color: var(--background-color);
    color: var(--text-color);
    margin: 0;
    padding: 0;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

.container {
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
}

.logo-container {
    text-align: center;
    margin-bottom: 2rem;
}

.logo {
    max-width: 200px;
    height: auto;
    margin: 0 auto;
}

header {
    text-align: center;
    margin-bottom: 2rem;
}

h1 {
    color: var(--primary-color);
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
}

header p {
    color: var(--text-color);
    opacity: 0.7;
}

.grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
}

.card {
    background-color: var(--card-color);
    border-radius: 8px;
    padding: 1.5rem;
    text-align: center;
    text-decoration: none;
    color: var(--text-color);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}

.card i {
    font-size: 3rem;
    margin-bottom: 1rem;
    display: block;
}

.card:nth-child(1) i { color: var(--primary-color); }
.card:nth-child(2) i { color: var(--primary-color); }
.card:nth-child(3) i { color: var(--primary-color); }
.card:nth-child(4) i { color: var(--primary-color); }
.card:nth-child(5) i { color: var(--primary-color); }
.card:nth-child(6) i { color: var(--primary-color); }

.card h2 {
    margin: 0;
    font-size: 1.25rem;
}

@media (max-width: 768px) {
    .grid {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }
    
    .logo {
        max-width: 150px;
    }
    
    h1 {
        font-size: 2rem;
    }
}


</style>