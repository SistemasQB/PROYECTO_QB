<style>
/* Estilos generales */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background-color: #f9fafb;
  color: #374151;
  line-height: 1.5;
}

.main {
  min-height: 100vh;
  padding: 2rem 1rem;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
}

.hidden {
  display: none !important;
}

/* Explorador de archivos */
.file-explorer {
  background-color: white;
  border-radius: 0.75rem;
  overflow: hidden;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

/* Encabezado */
.header {
  background: linear-gradient(to right, #14b8a6, #0d9488);
  padding: 1.5rem;
  color: white;
}

.title {
  display: flex;
  align-items: center;
  font-size: 1.5rem;
  font-weight: 700;
}

.icon {
  margin-right: 0.5rem;
}

.breadcrumb {
  margin-top: 0.5rem;
  color: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
}

.separator {
  margin: 0 0.5rem;
}

/* Paneles */
.panels {
  display: grid;
  grid-template-columns: 1fr;
  gap: 0;
}

@media (min-width: 768px) {
  .panels {
    grid-template-columns: 1fr 1fr 2fr;
  }
}

.panel {
  border-right: 1px solid #e5e7eb;
  border-bottom: 1px solid #e5e7eb;
}

.panel-wide {
  grid-column: span 1;
}

@media (min-width: 768px) {
  .panel-wide {
    grid-column: span 2;
  }
}

.panel-header {
  padding: 1rem;
  border-bottom: 1px solid #e5e7eb;
}

.panel-title {
  font-size: 0.875rem;
  font-weight: 500;
  color: #4b5563;
}

.panel-content {
  max-height: 300px;
  overflow-y: auto;
  padding: 0.5rem;
}

/* Lista de carpetas */
.folder-list {
  list-style: none;
}

.folder-item {
  margin-bottom: 0.25rem;
}

.folder-button {
  width: 100%;
  text-align: left;
  padding: 0.5rem 0.75rem;
  border-radius: 0.375rem;
  display: flex;
  align-items: center;
  font-size: 0.875rem;
  transition: all 0.2s;
  border: none;
  background: none;
  cursor: pointer;
  color: #4b5563;
}

.folder-button:hover {
  background-color: #f3f4f6;
}

.folder-button.selected {
  background-color: #e6fffa;
  color: #0d9488;
}

.folder-icon {
  margin-right: 0.5rem;
  color: #14b8a6;
}

.file-icon {
  margin-right: 0.5rem;
  color: #ef4444;
}

/* Grid de carpetas */
.folder-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1rem;
}

@media (min-width: 640px) {
  .folder-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

.folder-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 1rem;
  border-radius: 0.5rem;
  cursor: pointer;
  transition: all 0.2s;
  border: 1px solid transparent;
}

.folder-card:hover {
  background-color: #f9fafb;
}

.folder-card.selected {
  background-color: #e6fffa;
  border-color: #99f6e4;
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
}

.folder-icon-container {
  width: 3rem;
  height: 3rem;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e6fffa;
  border-radius: 0.5rem;
  margin-bottom: 0.5rem;
}

.file-icon-container {
  width: 3rem;
  height: 3rem;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fee2e2;
  border-radius: 0.5rem;
  margin-bottom: 0.5rem;
}

.folder-name {
  font-size: 0.875rem;
  font-weight: 500;
  text-align: center;
  color: #4b5563;
}

/* Área de resultado */
.result-area {
  border-top: 1px solid #e5e7eb;
}

.result-header {
  padding: 1rem;
  background-color: #f3f4f6;
  border-bottom: 1px solid #e5e7eb;
}

.result-content {
  min-height: 400px;
  padding: 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pdf-viewer {
  width: 100%;
  height: 500px;
  border: 1px solid #e5e7eb;
  border-radius: 0.25rem;
}

/* Mensaje vacío */
.empty-message {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #9ca3af;
  text-align: center;
  padding: 2rem;
}

.empty-icon {
  margin-bottom: 1rem;
  color: #d1d5db;
}
</style>
