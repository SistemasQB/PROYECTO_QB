<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pedido de Insumos</title>
    <link rel="stylesheet" href="/styles/infraestructura/estilos_formato_pedido_insumos.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="container">
        <div class="form-card">
            <div class="header">
                <h1>Pedido de Insumos</h1>
            </div>

            <form id="pedidoForm">
                <div class="form-grid">
                    <!-- <div class="form-group">
                        <label for="folio">Folio *</label>
                        <input type="text" id="folio" name="folio" required>
                    </div> -->

                    <!-- <div class="form-group">
                        <label for="fecha">Fecha *</label>
                        <input type="date" id="fecha" name="fecha" required>
                    </div> -->

                    <div class="form-group">
                        <label for="planta">Planta *</label>
                        <select name="planta" id="planta" class="descripcion-select">
                            <option value="opcion 1">opcion 1</option>
                        </select>
                    </div>

                    <!-- <div class="form-group">
                        <label for="solicitante">Nombre del Solicitante *</label>
                        <input type="text" id="solicitante" name="solicitante" required>
                    </div> -->
                </div>

                <div class="pedidos-section">
                    <div class="section-header">
                        <h2>Pedidos</h2>
                        <button type="button" class="btn-add" id="agregarItem">+ Agregar Item</button>
                    </div>

                    <div class="table-container">
                        <table id="tablaPedidos">
                            <thead>
                                <tr>
                                    <th>Cantidad Solicitada *</th>
                                    <th>grupo *</th>
                                    <th>articulo *</th>
                                    <th>precio unitario</th>
                                    <th>precio total</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="pedidosBody">
                                <tr class="pedido-row">
                                    <td>
                                        <input type="number" class="cantidad-input" min="1" required>
                                    </td>
                                    <td>
                                        <select class="descripcion-select" data-grupo = 'grupo' required >
                                            
                                        </select>
                                    </td>
                                    <td>
                                        <select class="descripcion-select" data-insumo='insumo' required>
                                            <option value="">Seleccione un Insumo</option>
                                        </select>
                                    </td>
                                    <td>
                                        <input type="number" data-precioUnitario="unitario" class="input-precio" disabled>
                                    </td>
                                    <td>
                                        <input type="number" data-preciototal="total" class="input-precio" disabled>
                                    </td>
                                    <td>
                                        <button type="button" class="btn-remove" disabled>Eliminar</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="error-message" id="errorMessage"></div>
                <div class="form-group">
                    <div>total</div>
                    <div  id="totalL" class="btn-add"></div>
                </div>
                <div class="form-actions">    
                    <button type="button" class="btn-submit" id="btnEnvio">Enviar Pedido</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/scripts/infraestructura/scripts_formato_pedido_insumos.js"></script>
    <script src="/scripts/calidad/funcion_fetch_calidad.js"></script>
    <script>
        let productos = <%-JSON.stringify(productos)%>
        let plantas = <%-JSON.stringify(plantas)%>
        let tok = <%-JSON.stringify(tok)%>
    </script>
</body>
</html>
