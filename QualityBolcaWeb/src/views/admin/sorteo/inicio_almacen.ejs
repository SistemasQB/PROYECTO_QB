<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Materiales - Almacén</title>
    <link rel="stylesheet" href="/styles/sorteo/estilos_inicio_almacen.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-container">
            <button class="menu-toggle" id="menuToggle">
                <i class="fas fa-bars"></i>
            </button>
            <div class="logo">
                <i class="fas fa-warehouse"></i>
                <span>AlmacénPro</span>
            </div>
            <button class="btn-primary" id="newMaterialBtn">
                <i class="fas fa-plus"></i>
                Nuevo Material
            </button>
        </div>
    </header>

    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h3>Navegación</h3>
            <button class="sidebar-close" id="sidebarClose">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <ul class="sidebar-menu">
            <li><a href="#" class="active"><i class="fas fa-box"></i> Materiales</a></li>
            <li><a href="#"><i class="fas fa-chart-bar"></i> Reportes</a></li>
            <li><a href="#"><i class="fas fa-users"></i> Clientes</a></li>
            <li><a href="#"><i class="fas fa-cog"></i> Configuración</a></li>
        </ul>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h1>Gestión de Materiales</h1>
                <p>Administra el inventario de materiales del almacén</p>
            </div>

            <!-- Materials Table -->
            <div class="table-container">
                <div class="table-header">
                    <h2>Materiales Registrados</h2>
                    <div class="table-actions">
                        <input type="text" placeholder="Buscar materiales..." class="search-input" id="searchInput">
                    </div>
                </div>
                <div class="table-wrapper">
                    <table class="materials-table" id="materialsTable">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Folio</th>
                                <th>materiales</th>
                                <th>total Piezas</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="materialsTableBody">
                            <!-- Datos se cargan dinámicamente -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

    <!-- Modal -->
    <div class="modal-overlay" id="modalOverlay">
        <div class="modal">
            <div class="modal-header">
                <h3>Registrar Nuevo Material</h3>
                <button class="modal-close" id="modalClose">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form class="modal-body" id="materialForm">
                <div class="form-group">
                    <label for="partNumber">Número de Parte *</label>
                    <input type="text" id="partNumber" name="partNumber" required>
                </div>
                <div class="form-group">
                    <label for="description">Descripción *</label>
                    <textarea id="description" name="description" rows="3" required></textarea>
                </div>
                <div class="form-group">
                    <label for="client">Cliente *</label>
                    <input type="text" id="client" name="client" required>
                </div>
                <div class="form-group">
                    <label for="finalProductSelect">Producto Final</label>
                    <select id="finalProductSelect">
                        <option value="">Seleccionar producto final...</option>
                    </select>
                    <div class="selected-products" id="selectedProducts">
                        <!-- Productos seleccionados aparecen aquí -->
                    </div>
                </div>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" id="clearFormBtn">Limpiar</button>
                <button type="button" class="btn-secondary" id="cancelBtn">Cancelar</button>
                <button type="submit" class="btn-primary" id="submitBtn">Registrar Material</button>
            </div>
        </div>
    </div>

    <script src="/scripts/sorteo/scripts_inicio_almacen.js"></script>
    <script>
        let embarques = <%-JSON.stringify(embarques)%>
        let tok = <%-JSON.stringify(tok)%>
    </script>
</body>
</html>
