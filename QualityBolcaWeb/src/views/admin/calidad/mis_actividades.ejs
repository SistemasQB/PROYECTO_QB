<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mis Actividades</title>
    <link rel="stylesheet" href="/styles/calidad/estilos_mis_actividades.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="container">
        <h1 class="main-title">Gestión de Actividades</h1>
        
        <div class="activities-grid" id="activitiesGrid">
            
            <!-- Las cards se generarán dinámicamente con JavaScript -->
        </div>
    </div>

    <!-- Modal para asignar avance -->
    <div class="modal-overlay" id="modalOverlay">
        <div class="modal">
            <div class="modal-header">
                <h2 class="modal-title" id="modalTitle">Asignar Avance</h2>
                <button class="modal-close" id="modalClose">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <div class="modal-content">
                <div class="form-group">
                    <label for="avanceInput">Asignar avance %</label>
                    <input type="number" id="avance" min="0" max="100" placeholder="Ingrese el porcentaje de avance" name="avance">
                    <p class="help-text" id="currentProgress">Avance actual: 0%</p>
                </div>
                <div class="form-group">
                    <label for="comentarios">Comentarios</label>
                    <input type="text" id="comentariosUsuario" min="0" max="100" placeholder="Ingrese el porcentaje de avance" name="comentariosUsuario">
                </div>

                <div class="form-group">
                    <label>Cargar evidencia de avance</label>
                    <div class="dropzone" id="dropzone">
                        <i class="fas fa-upload dropzone-icon"></i>
                        <p class="dropzone-text">Arrastra archivos aquí o haz click para seleccionar</p>
                        <p class="dropzone-help">PNG, JPG, DOC, DOCX, XLS, XLSX, PPT, PPTX, PDF, XML</p>
                        <input type="file" id="fileInput" multiple accept=".png,.jpg,.jpeg,.pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.xml" hidden>
                    </div>
                    
                    <div class="uploaded-files" id="uploadedFiles"></div>
                </div>

                <div class="modal-actions">
                    <button class="btn btn-secondary" id="cancelBtn">Cancelar</button>
                    <button class="btn btn-primary" id="saveBtn">Guardar Avance</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast notification -->
    <div class="toast" id="toast">
        <div class="toast-content">
            <i class="toast-icon"></i>
            <span class="toast-message"></span>
        </div>
    </div>

    <script src="/scripts/calidad/scripts_mis_actividades.js"></script>
    <script src="/scripts/calidad/fetch_generica.js"></script>

    <script>
        let actividades = <%-JSON.stringify(actividades)%>;
        let tok = <%-JSON.stringify(token)%>;
    </script>
</body>
</html>
