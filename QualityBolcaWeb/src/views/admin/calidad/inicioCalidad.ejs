    <!-- Contenido principal -->
    <main class="main-content">
        <!-- Hero Section -->
        <section class="hero">
            <div class="hero-background"></div>
            <div class="container">
                <div class="hero-content">
                    <h1>
                        <span>Excelencia en</span>
                        <span class="highlight">Gestión de Calidad</span>
                    </h1>
                    <p>Transforme sus procesos empresariales con nuestro sistema integral de gestión de calidad. Controle, monitoree y mejore continuamente sus estándares de calidad.</p>
                    <div class="hero-buttons">
                        <button class="btn btn-primary">Comenzar Ahora</button>
                        <button class="btn btn-outline">Ver Demo</button>
                    </div>
                </div>
            </div>
        </section>

        <!-- Stats Section -->
        <section class="stats">
            <div class="container">
                <div class="stats-grid">
                    <div class="stat-item">
                        <div class="stat-number">99.8%</div>
                        <div class="stat-label">Conformidad</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">500+</div>
                        <div class="stat-label">Empresas</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">24/7</div>
                        <div class="stat-label">Monitoreo</div>
