                <div class="form-group">
                    <label>Nombre de la mejora</label>
                    <input type="text" name="nombre_mejora">
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Generador de la idea o Líder del equipo de mejora</label>
                        <input type="text" name="generador">
                    </div>
                    <div class="form-group">
                        <label>Puesto</label>
                        <input type="text" name="puesto">
                    </div>
                    <div class="form-group">
                        <label>Proceso al que perteneces</label>
                        <input type="text" name="puesto">
                    </div>
                </div>

                <div class="form-group">
                    <label>Nombre del equipo (Si aplica)</label>
                    <input type="text" name="proceso">
                </div>

                <div class="form-group" >
                    <label>Nombre de los participantes</label>
                    <input type="text" name="proceso">
                    <div class="form-group" id="lsitaParticipantes" style="text-align: center; margin-top: 3%;">
                        <p>Nombre de los participantes</p>
                        <p>Nombre de los participantes</p>
                        <p>Nombre de los participantes</p>
                    </div>
                </div>

                <div class="form-group">
                    <label>Proceso (s) donde se aplica la mejora </label>
                    <input type="text" name="proceso">
                </div>

                <div class="form-group">
                    <label>Región (s) donde se propone la mejora</label>
                    <input type="text" name="proceso">
                </div>
            </section>

            <section class="form-section">
                <h2 class="section-title">Tipo de mejora y beneficios</h2>

                <div class="checkbox-group">
                    <div class="checkbox-item">
                        <input type="checkbox" id="ahorro" name="tipo_mejora">
                        <label for="ahorro">Genera un ahorro material</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="sistema" name="tipo_mejora">
                        <label for="sistema">Facilita el trabajo diario</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="indirecta" name="tipo_mejora">
                        <label for="indirecta">Mejora el ambiente laboral</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="ambiental" name="tipo_mejora">
                        <label for="ambiental">Crear un entorno más saludable</label>
                    </div>
                </div>
            </section>

            <section class="form-section">

                <div class="checkbox-group">
                    <div class="checkbox-item">
                        <input type="checkbox" id="ahorro" name="tipo_mejora">
                        <label for="ahorro">Genera un ahorro material</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="sistema" name="tipo_mejora">
                        <label for="sistema">Genera un ahorro económico</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="indirecta" name="tipo_mejora">
                        <label for="indirecta">Facilita el trabajo diario </label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="ambiental" name="tipo_mejora">
                        <label for="ambiental">Ahorra tiempos</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="ahorro" name="tipo_mejora">
                        <label for="ahorro">Efectividad en tu proceso</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="sistema" name="tipo_mejora">
                        <label for="sistema">Mejora el ambiente laboral </label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="indirecta" name="tipo_mejora">
                        <label for="indirecta">Mejora el ambiente laboral</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="ambiental" name="tipo_mejora">
                        <label for="ambiental">Cambio en beneficio a la organización</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="ambiental" name="tipo_mejora">
                        <label for="ambiental">Crear un entorno más saludable y sostenible</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="ambiental" name="tipo_mejora">
                        <label for="ambiental">Mitiga el impacto negativo de cualquier actividad en el medio ambiente</label>
                    </div>
                </div>

                <div class="benefits-grid">
                    <div class="situation-box">
                        <h3>Situación Actual:</h3>
                        <textarea rows="6"></textarea>
                    </div>
                    <div class="situation-box">
                        <h3>Mejora Propuesta:</h3>
                        <textarea rows="6"></textarea>
                    </div>
                </div>
            </section>
        </form>
    </div>
</body>
</html>