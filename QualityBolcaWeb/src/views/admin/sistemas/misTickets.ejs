<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mis Tickets</title>
    <link rel="stylesheet" href="/styles/sistemas/misTickets.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
</head>

<body>
    <header class="module-header">
        <div class="header-content">
            <h1>Mis Tickets</h1>
            <nav>
                <button class="btn-new-ticket" onclick="location.href='tickets'">
                    <span class="material-icons-round">add</span> Nuevo Ticket
                </button>
            </nav>
        </div>
    </header>
    <div class="main-container">
        <div class="user-welcome">
            <h2>Bienvenido, <%= nombreUsuario %>!</h2>
            <p class="subtitle">Gestiona y da seguimiento a tus solicitudes.</p>
        </div>

        <section class="controls-bar">
            <div class="search-box">
                <span class="material-icons-round">search</span>
                <input type="text" id="searchInput" placeholder="Buscar por asunto o ID...">
            </div>
        </section>

        <section class="tabs-section">
            <button class="status-tab active" data-status="todos">
                Todos <span class="tab-count"></span>
            </button>
            <button class="status-tab" data-status="abierto">
                Abiertos <span class="tab-count"></span>
            </button>
            <button class="status-tab" data-status="proceso">
                En proceso <span class="tab-count"></span>
            </button>
            <button class="status-tab" data-status="pendiente">
                Pendientes <span class="tab-count"></span>
            </button>
            <button class="status-tab" data-status="resuelto">
                Resueltos <span class="tab-count"></span>
            </button>
            <button class="status-tab" data-status="cerrado">
                Cerrados <span class="tab-count"></span>
            </button>
        </section>

        <section class="tickets-grid" id="ticketsContainer">
            <% if (tickets && tickets.length> 0) { %>
                <% tickets.forEach(function(ticket) { %>
                    <article class="ticket-card" data-status="<%= ticket.estatus.toLowerCase() %>">
                        <div class="ticket-header">
                            <span class="ticket-id">#<%= ticket.id %></span>
                            <span class="status-badge status-<%= ticket.estatus.toLowerCase() %>">
                                <%= ticket.estatus %>
                            </span>
                        </div>
                        <div class="ticket-body">
                            <h3 class="ticket-subject">
                                <%= ticket.asunto %>
                            </h3>
                            <p class="ticket-date">
                                <span class="material-icons-round icon-sm">calendar_today</span>
                                <%= ticket.fecha %>
                            </p>
                            <p class="ticket-tech">
                                <span class="material-icons-round icon-sm">engineering</span>
                                <%= ticket.tecnico %>
                            </p>
                        </div>
                    </article>
                    <% }); %>
                        <% } %>
        </section>

        <!-- Empty state dinÃ¡mico -->
        <div class="empty-state" id="emptyState" style="display:none;">
            <p id="emptyMessage">No hay tickets con este estatus.</p>
        </div>
    </div>
    <script src="/scripts/sistemas/misTickets.js"></script>
</body>

</html>