    color: white;
    border: 1px solid #dc2626;
}

.btn-destructive:hover {
    background-color: #b91c1c;
}

.btn svg {
    width: 0.75rem;
    height: 0.75rem;
}

/* Modal */
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
