        tableContent += `
          <td rowspan="4">${equipment.id}</td>
          <td rowspan="4">${equipment.nombre}</td>
          <td rowspan="4">${equipment.marca}</td>
          <td rowspan="4">${equipment.departamento}</td>
          <td rowspan="4">${equipment.region}</td>
          <td rowspan="4">${equipment.fecha}</td>
          <td rowspan="4">${equipment.tecnico}</td>
        `;
      }
      
      // Agregar el tipo de mantenimiento
      tableContent += `<td class="type">${type.name}</td>`;
      
      // Agregar las celdas de los meses
      months.forEach(month => {
        const hasMaintenanceClass = equipment.mantenimientos[month][type.id] ? type.color : '';
        tableContent += `<td class="${hasMaintenanceClass}"></td>`;
      });
      
      tableContent += '</tr>';
    });
  });
  
  // Agregar filas vacías adicionales
