// Función para llenar la tabla con datos
function populateTable() {
  const tableBody = document.getElementById('maintenance-data');
  let tableContent = '';

  // Agregar filas con datos
  sampleData.forEach(equipment => {
    maintenanceTypes.forEach((type, typeIndex) => {
      tableContent += '<tr>';
      
      // Solo agregar las celdas de información del equipo en la primera fila de cada equipo
